<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:voiceView="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/theme_color_primary"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.js.phonicdiary.view.VoiceLineView
        android:id="@+id/dialog_record_voicLine"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00000000"
        voiceView:fineness="three"
        voiceView:lineSpeed="90"
        voiceView:maxVolume="100"
        voiceView:middleLine="@color/theme_color"
        voiceView:middleLineHeight="1dp"
        voiceView:rectSpace="2dp"
        voiceView:rectWidth="5dp"
        voiceView:sensibility="five"
        voiceView:viewMode="line"
        voiceView:voiceLine="@color/theme_color" />

    <com.bilibili.magicasakura.widgets.TintImageView
        android:id="@+id/dialog_record__voice"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_voice_white_24dp"
        voiceView:imageTint="@color/theme_color" />

    <TextView
        android:id="@+id/dialog_record__length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="00:00:00"
        android:textColor="@color/theme_color_title"
        android:textSize="14sp" />

</LinearLayout>
