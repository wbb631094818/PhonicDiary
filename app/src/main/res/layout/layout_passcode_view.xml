<?xml version="1.0" encoding="utf-8"?>
<com.bilibili.magicasakura.widgets.TintLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background2"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_circle_red">

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/iv_lock"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_lock_gray_24dp"
            app:imageTint="@color/theme_color_primary" />

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/iv_ok"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:scaleX="0"
            android:scaleY="0"
            android:src="@drawable/ic_check_bold_24dp"
            app:imageTint="@color/theme_color_primary" />
    </RelativeLayout>

    <com.bilibili.magicasakura.widgets.TintTextView
        android:id="@+id/tv_input_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:letterSpacing="0.02"
        android:textColor="@color/theme_color_title"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="32dp">

        <View
            android:id="@+id/cursor"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/layout_psd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" />
    </FrameLayout>

    <com.bilibili.magicasakura.widgets.TintImageView
        android:id="@+id/fingerprint"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_fingerprint_white_24dp"
        app:imageTint="@color/theme_color_icon" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/number1"
            style="@style/NumberInPasscode"
            android:layout_alignParentStart="true"
            android:text="1" />

        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/number2"
            style="@style/NumberInPasscode"
            android:layout_centerHorizontal="true"
            android:text="2" />

        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/number3"
            style="@style/NumberInPasscode"
            android:layout_alignParentEnd="true"
            android:text="3" />

        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/number4"
            style="@style/NumberInPasscode"
            android:layout_below="@id/number1"
            android:layout_alignParentStart="true"
            android:text="4" />

        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/number5"
            style="@style/NumberInPasscode"
            android:layout_below="@id/number1"
            android:layout_centerHorizontal="true"
            android:text="5" />

        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/number6"
            style="@style/NumberInPasscode"
            android:layout_below="@id/number1"
            android:layout_alignParentEnd="true"
            android:text="6" />

        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/number7"
            style="@style/NumberInPasscode"
            android:layout_below="@id/number4"
            android:layout_alignParentStart="true"
            android:text="7" />

        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/number8"
            style="@style/NumberInPasscode"
            android:layout_below="@id/number4"
            android:layout_centerHorizontal="true"
            android:text="8" />

        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/number9"
            style="@style/NumberInPasscode"
            android:layout_below="@id/number4"
            android:layout_alignParentEnd="true"
            android:text="9" />

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/numberB"
            style="@style/NumberInPasscode"
            android:layout_below="@id/number7"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside"
            android:src="@drawable/backspace"
            app:imageTint="@color/theme_color_icon" />

        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/number0"
            style="@style/NumberInPasscode"
            android:layout_below="@id/number7"
            android:layout_centerHorizontal="true"
            android:text="0" />

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/numberOK"
            style="@style/NumberInPasscode"
            android:layout_below="@id/number7"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_check_bold_24dp"
            app:imageTint="@color/theme_color_icon" />
    </RelativeLayout>

</com.bilibili.magicasakura.widgets.TintLinearLayout>